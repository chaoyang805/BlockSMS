            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="来自：13788747078"
            android:textAppearance="?android:attr/textAppearance"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/tv_related_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_related_num"
            android:layout_alignParentRight="true"
            android:paddingRight="8dp"
            android:text="时间：10.38"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_sms_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="尊敬的用户，请回复以下编码办理业务：1505：已订业务查询1503：积分查询1071：手机上网流量查询1501：套餐余量查询5083：流量半年包余量查询 【买4G就上 m.10010.com】"
        android:textColor="@android:color/primary_text_light"
        android:textSize="20sp"
        />
</LinearLayout>